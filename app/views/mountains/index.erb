<p class="flash"><% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %></p>

<h2 class="welcome">All Mountains</h2>
<a href="/logout" class="logout">Log Out</a>

<%@mountains.each do |mountain|%>
<p class="user_list"><a href="/mountains/<%=mountain.slug%>"><%=mountain.name%></a>        (<%=mountain.elevation%>)</p>
<%end%>
