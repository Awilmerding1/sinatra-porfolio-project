<form action="/lists" method="POST">

<h3>Please add at least one mountain to create your list.</h3>

  <h3>Mountains:</h3>
  <% @mountains.each do |mountain| %>
  <input id="<%= mountain.name %>" type="checkbox" name="mountains[]" value="<%= mountain.id %>"><%=mountain.name.titleize%></input>
  <% end %>

  <br></br>

  <input type="submit" value="Create List" id="submit" name="submit">



</form>
